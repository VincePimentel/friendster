<div class="row justify-content-center mt-4">
  <div class="col-12">
    <%= render partial: "row",
      locals: {
        heading: "Friend Requests (Received)",
        users: @received_requests,
        action: "accept"
      } %>
  </div>
</div>

<div class="row justify-content-center mt-4">
  <div class="col-12">
    <%= render partial: "row",
      locals: {
        heading: "Pending Requests (Sent)",
        users: @sent_requests,
        action: "cancel"
      } %>
  </div>
</div>

<div class="row justify-content-center mt-4">
  <div class="col-12">
    <%= render partial: "row",
      locals: {
        heading: "Find Friends",
        users: @users,
        action: "add friend"
      } %>
  </div>
</div>
