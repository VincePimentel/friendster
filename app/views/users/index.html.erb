<div class="row justify-content-center mt-4">
  <div class="col-12">
    <h5 class="mb-3">Friend Requests</h5>

    <% if @requests.size > 0 %>

      <div class="row">
        <% @requests.each do |user| %>
          <%= render partial: "card", locals: { user: user } %>
        <% end %>
      </div>

    <% else %>
      NO INCOMING REQUESTS

    <% end %>
  </div>
</div>

<div class="row justify-content-center mt-4">
  <div class="col-12">
    <h5 class="mb-3">Pending Requests</h5>

    <% if @pending.size > 0 %>

      <div class="row">
        <% @pending.each do |user| %>
          <%= render partial: "card", locals: { user: user } %>
        <% end %>
      </div>

    <% else %>
      NO OUTGOING REQUESTS

    <% end %>
  </div>
</div>

<div class="row justify-content-center mt-4">
  <div class="col-12">
    <h5 class="mb-3">Find Friends</h5>

    <% if @users.size > 0 %>

      <div class="row">
        <% @users.each do |user| %>
          <%= render partial: "card", locals: { user: user } %>
        <% end %>
      </div>

    <% else %>
      NO FRIENDS

    <% end %>
  </div>
</div>
