<div class="row">
  <div class="col-12">
    <h5>Find Friends</h5>

    <ul>
      <% @users.each do |user| %>

        <% next if current_user == user || current_user.friends.exists?(user.id) %>

          <li>
            <%= link_to user.full_name, user_path(user) %>
            (<%= link_to "Add Friend", friendships_path(friend_id: user), method: :post  %>)
          </li>

      <% end %>
    </ul>
  </div>
</div>
