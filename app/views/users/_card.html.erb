<div class="col-6 mb-4">
  <div class="card">
    <div class="row no-gutters">

      <div class="col-md-4 text-center">
        <%= image_tag user.avatar, class: "img-fluid" %>
      </div>

      <div class="col-md-8 mb-n1">
        <div class="card-body">

          <h5 class="card-title">
            <%= link_to user.full_name, user_path(user) %>
          </h5>

          <p class="card-text">
            <%= button(user, type) %>
          </p>

        </div>
      </div>

    </div>
  </div>
</div>
