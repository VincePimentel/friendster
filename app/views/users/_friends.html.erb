<div class="col-12">
  <ul>
    <% @user.friendships.each do |friendship| %>
      <li>
        <%= link_to friendship.friend.full_name, user_path(friendship.friend) %>

        <% if current_user == @user %>
          (<%= link_to "remove", friendship_path(friendship), method: :delete %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
