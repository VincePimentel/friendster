<div class="row justify-content-center mt-4">
  <div class="col-10 col-sm-9 col-md-7 col-lg-6">

    <%= form_for(@user) do |f| %>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <%= icon("fas", "user-alt fa-fw") %>
          </span>
        </div>
        <%= f.text_field :first_name, placeholder: "First name", class: "form-control" %>
        <%= f.text_field :last_name, placeholder: "Last name", class: "form-control" %>
      </div>

      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <%= icon("fas", "at fa-fw") %>
          </span>
        </div>
        <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
      </div>

      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <%= icon("fas", "envelope fa-fw") %>
          </span>
        </div>
        <%= f.text_field :email, placeholder: "E-mail", class: "form-control" %>
      </div>

      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <%= icon("fas", "key fa-fw") %>
          </span>
        </div>
        <%= f.password_field :password, placeholder: "•••••••", class: "form-control" %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control" %>
      </div>

      <% if @user.id %>

        <div class="row mb-2">
          <div class="input-group justify-content-center">
            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :gender, "male", class: "custom-control-input" %>
              <%= f.label :gender, "Male", value: "male", class: "custom-control-label" %>
            </div>

            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :gender, "female", class: "custom-control-input" %>
              <%= f.label :gender, "Female", value: "female", class: "custom-control-label" %>
            </div>

            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :gender, "other", class: "custom-control-input" %>
              <%= f.label :gender, "Other", value: "other", class: "custom-control-label" %>
            </div>

            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :gender, "rather not say", class: "custom-control-input" %>
              <%= f.label :gender, "Rather not say", value: "rather not say", class: "custom-control-label" %>
            </div>
          </div>
        </div>

        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <%= icon("fas", "book fa-fw") %>
            </span>
          </div>
          <%= f.text_area :bio, placeholder: "Bio", rows: "10", class: "form-control" %>
        </div>

        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <%= icon("fas", "link fa-fw") %>
            </span>
          </div>
          <%= f.text_field :website, placeholder: "Website", class: "form-control" %>
        </div>

        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <%= icon("fab", "instagram fa-fw") %>
            </span>
          </div>
          <%= f.text_field :instagram, placeholder: "Instagram (username)", class: "form-control" %>
        </div>

        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <%= icon("fab", "twitter fa-fw") %>
            </span>
          </div>
          <%= f.text_field :twitter, placeholder: "Twitter (username)", class: "form-control" %>
        </div>

      <% end %>

      <%= f.submit class: "btn btn-primary btn-block" %>
    <% end %>

  </div>
</div>
