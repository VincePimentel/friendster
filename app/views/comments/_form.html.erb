<%= form_for [post, @comment] do |f| %>
  <div class="form-row">
    <div class="col-9">
      <%= f.text_field :content, placeholder: "Leave a comment...", class: "form-control form-control-sm" %>
    </div>

    <div class="col-3">
      <%= f.submit :post, class: "btn btn-primary btn-block btn-sm" %>
    </div>
  </div> <!-- form-row -->
<% end %>

<% if post.comments.size > 0 %>
  <div class="accordion mt-1" id="accordion">
    <div class="card">

      <div class="card-header p-0" id="heading_<%= post.id %>">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse_<%= post.id %>">
          <small>show comments (<%= post.comments.size %>)</small>
        </button>
      </div>

      <div id="collapse_<%= post.id %>" class="collapse" data-parent="#accordion">
        <div class="card-body p-1">
          <ul class="list-group">
            <% post.comments.each do |comment, i| %>
              <li class="list-group-item">
                <%= link_to comment.commentable.user.full_name, user_path(comment.commentable.user) %> <%= comment.content %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

    </div>
  </div>
<% end %>




