<div class="row justify-content-center mt-4">
  <div class="col-10 col-sm-9 col-md-7 col-lg-6">
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4 text-center">
          <%= image_tag @friendship.friend.avatar, class: "img-fluid" %>
        </div>

        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to @friendship.friend.full_name, path(@friendship.friend) %>
            </h5>
            <p class="card-text">
              <%= tag.small(@friendship.relationship, class: "badge badge-pill badge-primary") %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <%= form_for(@friendship) do |f| %>
      <%= f.label :relationship %>

      <div class="form-group">
        <div class="form-row">
          <div class="col-6">
            <%= f.select :relationship,
              ["Friends", "Close Friends", "Acquaintances", "Co-workers", "Spouse", "Partner", "Parent"], {},
              class: "custom-select custom-select-sm" %>
          </div>
        </div>

        <div class="form-row mt-1">
          <div class="col-6">
            <%= f.submit "Update", class: "btn btn-primary btn-block btn-sm" %>
          </div>

          <div class="col-6">
            <%= link_to friendship_path(@friendship),
              method: :delete,
              role: "button",
              class: "btn btn-primary btn-block btn-sm" do %>
              <%= icon("fas", "user-minus") + " Unfriend" %>
            <% end %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>

<div class="dropdown-divider"></div>

<div class="row justify-content-center">
  <div class="col-12">

  </div>
</div>

