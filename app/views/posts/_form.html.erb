<%= form_for [user, post] do |f| %>
  <div class="form-group">
    <%= f.text_area :content,
      placeholder: "What's up, #{user.first_name}?",
      class: "form-control" %>
  </div>

  <div class="form-row">
    <div class="col-10 col-md-9">
      <%= f.text_field :link,
        placeholder: "Image URL",
        class: "form-control" %>
    </div>

    <div class="col-2 col-md-3">
      <%= f.submit "Share", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
