<div class="row justify-content-center mt-4">
  <div class="col-10 col-sm-9 col-md-7 col-lg-6">
    <%= render partial: "form",
      locals: {
        user: @user,
        recipient_id: @post.recipient_id,
        post: @post
      } %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-10 col-sm-9 col-md-7 col-lg-6">
    <h5 class="mt-4 mb-3">Preview</h5>

    <%= render partial: "post", collection: [@post],
      locals: {
        comment: @comment
      } %>
  </div>
</div>


